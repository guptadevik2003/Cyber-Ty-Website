<body onload="bodyLoaded()">

    <!-- Hero Section -->
    <div class="hero_section container">

        <div class="main-info-container">
            <p>Next Update in: <span id="nextUpdateIn"></span></p>
            <div class="name-container">
                <img id="botImage" src="">
                <h2 id="botName"></h2>
            </div>
        </div>

        <div class="card-container-1">

            <div class="card-base card-1">
                <p onclick="watchBotClick()" class="watchbot-button">More</p>
                <p onclick="StartStopClick()" id="startStopButton" class="start-stop-button">Start</p>
                <p class="sub-heading">Uptime / Status</p>
                <p id="uptimeStatus" class="main-heading"><p>
                <p class="ping-heading">Ping: <span id="botPing"></span></p>
            </div>

        </div>

        <div class="card-container-1">
            
            <div class="card-base card-2">
                <p class="sub-heading">Guilds</p>
                <p id="guildCount" class="main-heading"></p>
                <p class="bottom-heading">Guilds Size</p>
            </div>

            <div class="card-base card-2">
                <p class="sub-heading">Users</p>
                <p id="userCount" class="main-heading"></p>
                <p class="bottom-heading">Users Serving</p>
            </div>

        </div>

        <div class="card-container-1">
            
            <div class="card-base card-3">
                <div class="meter-svg">
                    <svg id="CPUmeter">
                        <circle cx="60" cy="60" r="60"></circle>
                        <circle cx="60" cy="60" r="60"></circle>
                    </svg>
                </div>
                <h2 class="number"><span id="CPUpercent"></span>%</h2>
                <p class="percent-heading">CPU Usage</p>
            </div>

            <div class="card-base card-3">
                <div class="meter-svg">
                    <svg id="RAMmeter">
                        <circle cx="60" cy="60" r="60"></circle>
                        <circle cx="60" cy="60" r="60"></circle>
                    </svg>
                </div>
                <h2 class="number"><span id="RAMpercent"></span>%</h2>
                <p class="percent-heading">RAM Usage</p>
            </div>

        </div>

    </div>

</body>
</html>
